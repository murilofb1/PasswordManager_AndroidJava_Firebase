<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.passwordgeneratorv2">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/password_generator_round"
        android:label="@string/app_name"
        android:roundIcon="@drawable/password_generator_round"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity
            android:name=".authentication.AuthenticationActivity"
            android:theme="@style/MainTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".editPassword.EditPasswordView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".newPassword.ActivityNewPassword"
            android:label="@string/title_activity_cadastrar_senha"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.options.AccountInfo"
            android:label="@string/title_activity_account_info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.options.DeletedPasswords"
            android:label="@string/activity_deleted_passwords_title" />

    </application>

</manifest>